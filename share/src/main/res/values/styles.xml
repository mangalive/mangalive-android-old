<resources>

    <style name="Widget.Theme.Mangalive.PopupMenu" parent="Widget.MaterialComponents.PopupMenu">
        <item name="android:textColor">?attr/colorOnSurface</item>
        <item name="android:popupBackground">@drawable/surface_bg</item>
        <item name="android:dropDownVerticalOffset">@dimen/panel_horizontal_padding</item>
        <item name="android:itemBackground">?attr/colorSurface</item>
    </style>

    <style name="Widget.Mangalive.BottomNavigationView" parent="Widget.MaterialComponents.BottomNavigationView">
        <!--        <item name="itemIconTint">?attr/colorPrimary</item>-->
        <!--        <item name="labelVisibilityMode">selected</item>-->
        <item name="android:elevation">8dp</item>
        <item name="android:minHeight">64dp</item>
        <item name="itemIconSize">26dp</item>
        <item name="itemTextAppearanceInactive">@style/TextAppearance.Material3.TitleSmall</item>
        <item name="itemTextAppearanceActive">@style/TextAppearance.Material3.TitleSmall</item>
        <!--        <item name="itemActiveIndicatorStyle">@null</item>-->
        <item name="labelVisibilityMode">selected</item>
    </style>

    <style name="Widget.Mangalive.Header.Search" parent="Widget.Material3.CardView.Outlined">
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="strokeWidth">2dp</item>
        <item name="strokeColor">?attr/colorPrimary</item>
        <item name="cardBackgroundColor">@android:color/transparent</item>
    </style>

    <style name="Widget.Mangalive.Header.Search.Icon" parent="Widget.Material3.Button.IconButton">
        <item name="android:clickable">false</item>
        <item name="android:focusable">false</item>
        <item name="android:minWidth">0dp</item>
        <item name="android:minHeight">0dp</item>
        <item name="android:padding">0dp</item>
        <item name="icon">@drawable/ic_header_search</item>
        <item name="iconSize">30dp</item>
        <item name="iconTint">?attr/colorPrimary</item>
        <item name="rippleColor">@null</item>
    </style>

    <style name="Widget.Mangalive.Header.Search.Placeholder" parent="">
        <item name="android:ellipsize">end</item>
        <item name="android:lines">1</item>
        <item name="android:textAppearance">@style/TextAppearance.Material3.TitleMedium</item>
        <item name="android:textColor">?attr/colorOnBackground</item>
    </style>

    <style name="Widget.Mangalive.Header.IconButton" parent="Widget.Material3.Button.IconButton">
        <item name="iconSize">30dp</item>
        <item name="iconPadding">0dp</item>
        <item name="android:padding">@dimen/default_padding</item>
        <item name="android:minHeight">0dp</item>
        <item name="android:minWidth">0dp</item>
    </style>
</resources>